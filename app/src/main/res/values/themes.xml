<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Default" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Goldy's Theme -->
    <style name="Theme.JavaneseScriptRecognizer" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/goldyPrimary</item>
        <item name="colorOnPrimary">@color/goldyTextLight</item>
        <item name="colorPrimaryDark">@color/goldyPrimaryDark</item>
        <item name="colorSecondary">@color/goldySecondary</item>
        <item name="colorOnSecondary">@color/goldyText</item>
        <item name="colorAccent">@color/goldyAccent</item>
        <item name="tabBackgroundColor">@color/goldyPrimaryDark</item>
        <item name="toolbarBackgroundColor">@color/goldyPrimaryDark</item>
        <item name="textDarkColor">@color/goldyText</item>
        <item name="textTabColor">@color/goldyText</item>
        <item name="textWhiteColor">@color/goldyTextLight</item>
        <item name="detailBackground">@color/goldyLightBackground</item>
        <item name="backgroundColor">@color/goldyLightBackground</item>
        <item name="buttonTint">@color/goldyPrimary</item>
    </style>
</resources>